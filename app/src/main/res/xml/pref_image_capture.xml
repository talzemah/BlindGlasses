<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="auto_capture_switch"
        android:summary="@string/pref_description_auto_capture"
        android:title="@string/pref_title_auto_capture" />

    <!--android:valueIndex="4"-->

    <ListPreference
        android:defaultValue="60"
        android:entries="@array/pref_capture_frequency_titles"
        android:entryValues="@array/pref_capture_frequency_values"
        android:key="capture_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_capture_frequency" />

</PreferenceScreen>
